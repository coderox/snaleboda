<Application
    x:Class="Snaleboda.Universal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Snaleboda.Universal">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ms-appx:///PlatformResources.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<Color x:Key="AppYellowColor">#FFFFE699</Color>
			<SolidColorBrush x:Key="AppYellowBrush" Color="{StaticResource AppYellowColor}"/>
		</ResourceDictionary>
	</Application.Resources>

</Application>
